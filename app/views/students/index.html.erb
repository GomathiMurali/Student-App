<p id="notice"><%= notice %></p>
<div class="container">
  <div class="page-header">
<h4>Students Details</h4>
</div>
</div>
<div class="container">
  <br>
  <b>
  <%= link_to 'Add Student' , new_student_path,class: "btn btn-success btn-sm" %></b>
<br>
<br>
<table class="table table-striped">


  <thead>
    <tr>
      <th>Student name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Address</th>
      <th>Mobile no</th>
      <th>Email</th>
      <th></th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.student_name %></td>
        <td><%= student.age %></td>
        <td><%= student.gender %></td>
        <td><%= student.address %></td>
        <td><%= student.mobile_no %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student ,class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit' , edit_student_path(student),class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
